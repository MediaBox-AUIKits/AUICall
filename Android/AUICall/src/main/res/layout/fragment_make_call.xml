<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@mipmap/ic_back"/>
        <TextView
            android:id="@+id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"
            android:textColor="#FCFCFD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:id="@+id/user_name_tag"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:textColor="#FCFCFD"
            android:textSize="16sp"
            android:text="呼叫用户ID"
            />
        <EditText
            android:id="@+id/user_id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_name_tag"
            android:textSize="14sp"
            android:textColor="#E6E7EC"
            android:hint="请输入字母、数字、下划线"
            />
        <ImageView
            android:id="@+id/user_input_clear"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_input_clear"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/user_id_input"
            app:layout_constraintTop_toTopOf="@id/user_id_input"
            />
        <TextView
            android:id="@+id/user_input_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/user_input_clear"
            android:layout_marginRight="13dp"
            app:layout_constraintBottom_toBottomOf="@id/user_id_input"
            app:layout_constraintTop_toTopOf="@id/user_id_input"
            android:textColor="#747A8C"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/my_id"
            app:layout_constraintTop_toBottomOf="@id/user_id_input"
            app:layout_constraintLeft_toLeftOf="@id/user_id_input"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B2B7C4"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/copy"
            app:layout_constraintTop_toTopOf="@id/my_id"
            app:layout_constraintLeft_toRightOf="@id/my_id"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00BCDE"
            android:textSize="12sp"
            android:text="复制"
            />

        <RadioGroup
            android:id="@+id/call_mode"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/my_id"
            app:layout_constraintTop_toBottomOf="@id/my_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/audio_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="语音通话"
                android:checked="true"
                android:textSize="14sp"
                android:textColor="#FCFCFD"
                />
            <RadioButton
                android:id="@+id/video_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="视频通话"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textColor="#FCFCFD"
                />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/make_call_btn"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="44dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="#FCFCFD"
        android:textSize="16sp"
        android:gravity="center"
        android:text="开始通话"
        android:background="@drawable/light_blue_btn_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>