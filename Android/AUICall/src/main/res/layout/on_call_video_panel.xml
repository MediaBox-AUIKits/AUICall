<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/on_call_audio_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/oncall_panel_bg"
    >
    <com.aliyun.auikits.auicall.widget.PhoneCallWidget
        android:id="@+id/hangup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.aliyun.auikits.auicall.widget.LoudSpeakerWidget
        android:id="@+id/switch_audio_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hangup_btn"
        android:layout_marginBottom="16dp"
        />
    <com.aliyun.auikits.auicall.widget.VoiceMuteWidget
        android:id="@+id/mute_voice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/switch_audio_out_btn"
        android:layout_marginLeft="49dp"/>
    <com.aliyun.auikits.auicall.widget.CameraMuteWidget
        android:id="@+id/mute_camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/switch_audio_out_btn"
        android:layout_marginRight="49dp"/>
    <LinearLayout
        android:id="@+id/switch_to_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="49dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_switch_to_audio"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E6E7EC"
            android:textSize="12sp"
            android:text="切换至语音"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/time_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FCFCFD"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/switch_audio_out_btn"
        />
</androidx.constraintlayout.widget.ConstraintLayout>